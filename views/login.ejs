<!-- form start here -->
    <div class="container">
      <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
          <form action="login" method="post">
            <div class="login_page">

             <% if ( email_password_error != '') { %>
                 <div class="alert alert-danger" role="alert">
                   <%= email_password_error %>
                 </div>
             <%}%>

             <% if ( ensureauthintication_error != '') { %>
               <div class="alert alert-danger" role="alert">
                 <%= ensureauthintication_error %>
               </div>
           <%}%>
             
             <div class="mb-3">
               <label for="email" class="form-label"><h5>Email</h5></label>
               <input type="email" name="email" placeholder="Email" class="form-control" id="email" required>
             </div>
             <input type="hidden", name='_csrf' , value = <%= token %> >
             <div class="mb-3">
               <label for="password" class="form-label"><h5>Password</h5></label>
               <input type="password" name="password" placeholder="Password" class="form-control" id="password" required>
             </div>


             <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        </form>


        </div>

      </div>
        
