<!--from start here -->

    <div class="container">
      <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
          <div class="reg_page">
            <!-- msgs on Page -->
            <!-- password length error -->
            <% if (typeof errors != 'undefined') { %>
              <% errors.forEach(function(err){ %>
                <div class="alert alert-danger" role="alert">
                  <%= err.msg %>
                </div>
              <%})%>
            <%}%>
            
            <!-- password match error -->
            <% if (typeof password_error != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
              <%= password_error %>
              </div>
            <%}%>
            
            <% if (typeof registered != 'undefined') { %>
              <div class="alert alert-info" role="alert">
              <%= registered %>
            </div>
            <%}%>
            <% if (typeof email_error != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
              <%= email_error %>
            </div>
            <%}%>
         <!-- end of msgs on Page -->
         <form action="/signup" method="POST">
        <div class="mb-3">
          <label for="full_name" class="form-label"><h5>Full Name</h5></label>
          <input type="text" name="full_name" placeholder="Full Name" required class="form-control" id="first_name" aria-describedby="emailHelp" >
          <small id="emailHelp" class="form-text text-muted">Full Name length must not exceed from 20.</small>
        </div>

        <div class="mb-3">
          <label for="user_name" class="form-label"><h5>User Name</h5></label>
          <input type="text" name="user_name" placeholder="User Name" required class="form-control" id="last_name">
          <small id="emailHelp" class="form-text text-muted">User Name length must not exceed from 20.</small>
        </div>

         <div class="mb-3">
          <label for="email" class="form-label"><h5>Email Address</h5></label>
          <input type="email" name="email" placeholder="Email" required class="form-control" id="email">
          <small id="emailHelp" class="form-text text-muted">Password length must be greater then 8.</small> 
        </div>
        <input type="hidden", name='_csrf' , value = <%= token %> >
         <div class="mb-3">
          <label for="password1" class="form-label"><h5>Password</h5></label>
          <input type="password" name="password1" placeholder="Password" required class="form-control" id="password1">
         <small id="emailHelp" class="form-text text-muted">Password length must be greater then 8.</small>
         </div>

         <div class="mb-3">

          <label for="password2" class="form-label"><h5>Password(Again)</h5></label>
          <input type="password" name="password2" placeholder="Confirm Password" required class="form-control" id="password2">
          

        </div>
        <button type="submit" class="btn btn-primary">Submit</button><br>
        </div>
      </form>
        
        </div>

      </div>
            
  
        
</div>
